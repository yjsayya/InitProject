<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOGFILE_NAME" value="init-project" />
  <property name="LOGFILE_DIR_LOCAL" value="./logs" />
  <property name="LOGFILE_DIR_DEV" value="./logs" />
  <property name="LOGFILE_DIR_PROD" value="./logs" />
  <!-- CONSOLE -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
      <charset>UTF-8</charset>
    </encoder>
  </appender>
  <!-- 1. local -->
  <springProfile name="local">
    <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>${LOGFILE_DIR_LOCAL}/${LOGFILE_NAME}.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>${LOGFILE_DIR_LOCAL}/${LOGFILE_NAME}_%d{yyyy-MM-dd}.log</fileNamePattern>
        <maxHistory>10</maxHistory>
        <totalSizeCap>2GB</totalSizeCap>
      </rollingPolicy>
      <encoder>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
        <charset>UTF-8</charset>
      </encoder>
    </appender>
  </springProfile>

  <!-- 2. dev -->
  <springProfile name="dev">
    <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>${LOGFILE_DIR_DEV}/${LOGFILE_NAME}.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>${LOGFILE_DIR_DEV}/${LOGFILE_NAME}_%d{yyyy-MM-dd}.log</fileNamePattern>
        <maxHistory>10</maxHistory>
        <totalSizeCap>4GB</totalSizeCap>
      </rollingPolicy>
      <encoder>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
        <charset>UTF-8</charset>
      </encoder>
    </appender>
  </springProfile>

  <!-- 3. prod -->
  <springProfile name="prod">
    <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <file>${LOGFILE_DIR_PROD}/${LOGFILE_NAME}.log</file>
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
        <fileNamePattern>${LOGFILE_DIR_PROD}/${LOGFILE_NAME}_%d{yyyy-MM-dd}.log</fileNamePattern>
        <maxHistory>10</maxHistory>
        <totalSizeCap>4GB</totalSizeCap>
      </rollingPolicy>
      <encoder>
        <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
        <charset>UTF-8</charset>
      </encoder>
    </appender>
  </springProfile>

  <!-- Local -->
  <springProfile name="local">
    <root level="INFO">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="dailyRollingFileAppender" />
    </root>
  </springProfile>
  <!-- Dev -->
  <springProfile name="dev">
    <root level="INFO">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="dailyRollingFileAppender" />
    </root>
  </springProfile>
  <!-- Prod -->
  <springProfile name="prod">
    <root level="INFO">
      <appender-ref ref="CONSOLE" />
      <appender-ref ref="dailyRollingFileAppender" />
    </root>
  </springProfile>
</configuration>