<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOGFILE_NAME" value="init-project" />
    <property name="LOGFILE_DIR" value="./logs" />
    <property name="LOCAL_LOGFILE_DIR" value="./logs" />
    <!-- CONSOLE -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
            <charset>utf8</charset>
        </encoder>
    </appender>
    <!-- 1. local -->
    <springProfile name="local">
        <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOCAL_LOGFILE_DIR}/${LOGFILE_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOCAL_LOGFILE_DIR}/${LOGFILE_NAME}_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>10</maxHistory>
                <totalSizeCap>2GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
    </springProfile>
    <!-- 2. dev -->
    <springProfile name="dev">
        <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOGFILE_DIR}/${LOGFILE_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOGFILE_DIR}/${LOGFILE_NAME}_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>90</maxHistory>
                <totalSizeCap>4GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level - [%thread] %logger{35} : %msg%n</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
    </springProfile>
    <!-- 3. prod -->
    <springProfile name="prod">
        <appender name="dailyRollingFileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOGFILE_DIR}/${LOGFILE_NAME}.log</file>
            <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
                <fileNamePattern>${LOGFILE_DIR}/${LOGFILE_NAME}_%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <maxFileSize>100MB</maxFileSize>
                <maxHistory>90</maxHistory>
                <totalSizeCap>4GB</totalSizeCap>
            </rollingPolicy>
            <encoder>
                <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level --- [%thread] %logger{35} : %msg%n</pattern>
                <charset>utf8</charset>
            </encoder>
        </appender>
    </springProfile>

    <!-- Local -->
    <springProfile name="local">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="dailyRollingFileAppender" />
        </root>
    </springProfile>
    <!-- Dev -->
    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="dailyRollingFileAppender" />
        </root>
    </springProfile>
    <!-- Prod -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="dailyRollingFileAppender" />
        </root>
    </springProfile>
</configuration>